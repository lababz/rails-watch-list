<!-- Hero Start -->
<div class="cover p-5 text-center bg-image rounded-3" style="background-image: url('https://images.unsplash.com/photo-1574267432553-4b4628081c31');">
  <div class="d-flex justify-content-center align-items-center h-100">
    <div>
      <h1 class="mb-3">The Utlimate watchlist</h1>
      <h2 class="mb-5">Save any kind of movies</h2>
      <%= link_to "🎬 Create a movie list", new_list_path, class: "btn btn-outline-light btn-lg" %>
    </div>
  </div>
</div>
<!-- Main container -->
<div class="container py-5">
  <h3>My lists</h3>
  <!-- Cards -->
  <div class="cards-container">
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) :asset_path('list_background.jpg') %>)"><%= link_to list[:name], list_path(list[:id]) %></div>
      <% end %>
    </div>
  </div>
</div>
